@section Scripts{

	<script src="~/js/customerDatatable.js"></script>
	<script src="~/lib/datatables/js/jquery.dataTables.js"></script>
	<script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>


	<script type="text/javascript">
        $(document).ready(function () {
            $("#tb_productos").DataTable({
                "processing": true,
                "serverSide": true,	
                "ajax": {
                    "url": '@Url.Action("ListaInventario", "Inventario")',
                    "type": "POST",
                    "datatype": "json",
                    "data": function (d) {
                        d.draw = d.draw;
                        d.start = d.start;
                        d.length = d.length;
                    }
                },
				columnDefs: [
                    {
                        targets: 0,
                        visible: false
                    }
                ],

                "columns": [
                    { "data": "idProducto", "autoWidth": true },
                    { "data": "prodName", "autoWidth": true },
                    { "data": "stock", "autoWidth": true },
                    { "data": "idProdCategory", "autoWidth": true },
                    { "data": "descripcion", "autoWidth": true },
                    { "data": "activo", "autoWidth": true },
                    {
                        "render": function (data,type, row) {
							return "<button type='button' class='btn btn-success mx-1'  onclick='openModal(2)'><i class='bi bi-arrow-down-up'></i></button>"+
								"<a href='#' class='btn btn-danger' onclick=DeleteProductoModal('" + row.idProducto + "','" + row.prodName + "'); ><i class='bi bi-trash'></i></a> " +
								"<a href='#' class='btn btn-primary' onclick=EditProductoModal('" + row.idProducto + "','" + row.prodName + "'); ><i class='bi bi-pencil-square'></i></a> " +
								"<a href='#' class='btn btn-warning' onclick=ChangePriceProductoModal('" + row.idProducto + "','" + row.prodName + "'); ><i class='bi bi-currency-dollar'></i></a>";
                        }
                    },
                ],
                "lengthChange":false,
                "paging": true,
                "ordering": true, 
                "searching": false,
                "filter":false,
                dom: "Bfrtip",
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                },
                "orderCellsTop": false,
                "fixedHeader": true,
           
            });

        });

       
		
    </script>

}

<script src="~/js/Inventario/InventarioPage.js" defer></script>
